# GBot Web Application Environment Configuration
# Generated: Development Environment

# Security
SECRET_KEY=your_secret_key_here_change_in_production
WHITELIST_TOKEN=your_whitelist_token_here_change_in_production

# Database (SQLite for local dev, PostgreSQL for production)
# For SQLite (default): Leave commented or use sqlite:///instance/gbot.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@host/database
# DATABASE_URL=postgresql://gbot_user:your_password@127.0.0.1/gbot_db

# IP Whitelist Configuration
ENABLE_IP_WHITELIST=False
ALLOW_ALL_IPS_IN_DEV=True

# Google API Configuration (fill in your credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Application Settings
DEBUG=True
FLASK_ENV=development
LOG_LEVEL=INFO

# Session Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Server Information (your server IP for production)
SERVER_IP=127.0.0.1

# Chrome Settings for Selenium (update paths for your system)
# Linux:
# CHROME_BINARY=/usr/bin/chromium-browser
# CHROMEDRIVER_PATH=/usr/bin/chromedriver
# Windows:
# CHROME_BINARY=C:\Program Files\Google\Chrome\Application\chrome.exe
# CHROMEDRIVER_PATH=C:\path\to\chromedriver.exe
